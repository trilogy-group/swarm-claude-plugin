# Claude DevOps Plugin Environment Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Your Claude/Anthropic API key
# Get your key from: https://console.anthropic.com/account/keys
CLAUDE_API_KEY=your-api-key-here

# Alternative: If you already have ANTHROPIC_API_KEY set
# ANTHROPIC_API_KEY=your-api-key-here

# Plugin operation mode: 'real' or 'simulation'
# - 'real': Uses actual Claude API (requires valid API key)
# - 'simulation': Uses simulated responses (no API key needed)
CLAUDE_PLUGIN_MODE=simulation

# API Base URL (optional, defaults to Anthropic's API)
# CLAUDE_API_BASE_URL=https://api.anthropic.com

# Plugin installation path (optional)
# CLAUDE_PLUGIN_PATH=/path/to/your/plugin

# Additional configuration file (optional)
# CLAUDE_CONFIG_FILE=/path/to/config.json

# DevOps Plugin specific settings
DEVOPS_ENVIRONMENT=development
DEVOPS_AUTO_DEPLOY=false
DEVOPS_SECURITY_LEVEL=high
DEVOPS_LOG_LEVEL=info

# CI/CD Settings
CI_PIPELINE_ENABLED=true
CD_AUTO_APPROVE=false
DEPLOYMENT_STRATEGY=blue-green

# Monitoring Settings
MONITORING_ENABLED=true
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=90
ALERT_EMAIL=devops@example.com

# Security Settings
SECURITY_SCAN_ON_COMMIT=true
SECURITY_BLOCK_ON_HIGH=true
VULNERABILITY_THRESHOLD=medium

# Script Paths (for script integration examples)
DEPLOY_SCRIPT_PATH=./scripts/deploy.js
SECURITY_SCAN_PATH=./scripts/security-scan.sh
FORMAT_CODE_PATH=./scripts/format-code.py
